<!DOCTYPE html>
  <html>
  <header>
    <link href="<%= url('/style.css') %>" rel="stylesheet" type="text/css" />
  </header>
  <body>
    <% if flash_waiting? %>
    <div class="flash">
      <%= read_flash %>
    </div>
    <% end %>

    <ul>
      <%= erb :'partials/standard', locals: { standard: @standard } %>
    </ul>
    <a href='/standards/<%= @standard.id %>/edit' class="spacious primary">Edit Standard</a><br><br>
    <a href='/users/homepage' class="spacious primary">Return to Homepage</a><br><br><br>

    <form action='/logout' method='POST'>
    <button type="submit">Log Out</button>
    </form>
  </body>
</html>
