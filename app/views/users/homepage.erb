<!DOCTYPE html>
<html>
<header>
  <link href="<%= url('/style.css') %>" rel="stylesheet" type="text/css" />
</header>


<body id="user_homepage">
  <section>
    <div>
    <h1 id="welcome">Welcome to the Teacher Organizer!</h1>
    <h3 id="users_name"><%= @user.name %>'s Homepage</h3><br>
    </div>
  </section>

  <section id="standards">
    <div>
      <a href="/standards/new" class="spacious primary">Add a Standard &raquo;</a><br><br>

      <ul>
      <% @standards.each do |standard|%>
        <li>
          <p>
            <b>Standard:</b>
            <br>
            <%= standard.title %>
          </p>
          <p>
            <b>Description:</b>
            <br>
            <%= standard.description %>
          </p>
          <p>
            <b>Resources:</b>
            <br>
            <ul>
              <% standard.resources.each do |resource| %>
                <li>
                  <%= resource.title + ":" %>
                  <a href="<%= resource.link %>" target="_blank"><%= resource.link %></a>
                </li>
                <br>
              <% end %>
            </ul>
          </p>
        </li>
        <br>
        <nav>
          <a href='/standards/<%= standard.id %>' class="spacious primary">Show Standard</a><br><br>
        </nav>
      <% end %>
      </ul>

      <form action='/logout' method='POST'>
          <button type="submit">Log Out</button>
      </form>
    </div>
  </section>
</body>
</div>
</html>
