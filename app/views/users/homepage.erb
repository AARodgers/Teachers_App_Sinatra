<!DOCTYPE html>
<html>
<header>
  <link href="<%= url('/style.css') %>" rel="stylesheet" type="text/css" />
</header>


<body>
  <section>
    <div>
    <h1 id="welcome">Welcome to the Teacher Organizer!</h1>
    <h3 id="users_name"><%= @user.name %>'s Homepage</h3><br>
    </div>
  </section>

  <section id="standards">
    <div>
      <h3>Here are your Standards and Resources:</h3>
      <h3><a href="/standards/new" class="spacious primary">Add a Standard &raquo;</a><br><br>



      <ul>
      <% @standards.each do |standard|%>
        <li>
        <b><%= "Standard:" %></b><br><ul><li><%= standard.title %></li></ul><br>
        <b><%= "Description:" %></b><br><ul><li><%= standard.description %></li></ul><br>
        <b><%= "Resources:" %></b><br>
          <% standard.resources.each do |resource| %>
          <ul>
            <%= resource.title %>
            <section id="resource_link2">
              <a href="<%= resource.link %>" target="_blank"><%= resource.link %></a>
            </section>
          </ul>
          <% end %>
        </li><br>
        <a href='/standards/<%= standard.id %>' class="button">Show Standard</a><br><br>
      <% end %>
      </ul>

      <form action='/logout' method='POST'>
          <button type="submit">Log Out</button>
      </form>
    </div>
  </section>
</body>
</div>
</html>
